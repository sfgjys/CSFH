<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/fl_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:padding="26dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_select_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" >

            <EditText
                android:id="@+id/et_select_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/my_edit_text"
                android:editable="false"
                android:hint="请选择日期"
                android:textColorHint="#88999999" 
                android:inputType="none"
                android:singleLine="true"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/et_select_time"
                android:layout_alignRight="@+id/et_select_time"
                android:layout_centerVertical="true"
                android:src="@mipmap/down_arrow" />
        </RelativeLayout>

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/bt_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_login_button"
            android:text="刷新"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:padding="6dp"
    android:background="@color/thin_gray"
    >

    <TextView
        android:id="@+id/tv_true_time_supervise_hubname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_blue"
        android:padding="6dp"
        android:text="某某枢纽"
        android:textColor="@color/white" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp" >

        <TextView
            android:id="@+id/tv_true_time_supervise_inriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内河"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_true_time_supervise_outriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="外河"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_true_time_supervise_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_true_time_supervise_inriver"
            android:layout_marginTop="5dp"
            android:text="机组"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_true_time_supervise_unit_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_true_time_supervise_outriver"
            android:layout_marginTop="5dp"
            android:text="开机"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_operation_deatail_diaodu_deatail_content"
    android:orientation="horizontal" >

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/thin_gray" />

    <TextView
        android:id="@+id/tv_add_operation_stationsdetails_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dp"
        android:text="枢纽名称"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/thin_gray" />

    <TextView
        android:id="@+id/tv_add_operation_stationsdetails_run"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:padding="6dp"
        android:text="运行数量"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/thin_gray" />

    <TextView
        android:id="@+id/tv_add_operation_stationsdetails_keep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:padding="6dp"
        android:text="保持数量"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/thin_gray" />

    <TextView
        android:id="@+id/tv_add_operation_stationsdetails_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:padding="6dp"
        android:text="阀门状态"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/thin_gray" />

</LinearLayout>